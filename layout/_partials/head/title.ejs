<%
let cake_title = '';
if (is_home()) {
  cake_title = title;
  if (theme.index_with_subtitle && subtitle) {
    cake_title += ` - ${subtitle}`;
  }
} else if (is_post()) {
  cake_title = `${page.title} | ${title}`;
} else if (is_page()) {
  let page_title_suffix = ' | ' + title;
  if (page.type === 'categories' && !page.title) {
    cake_title = __('title.category') + page_title_suffix;
  } else if (page.type === 'tags' && !page.title) {
    cake_title = __('title.tag') + page_title_suffix;
  } else {
    cake_title = page.title + page_title_suffix;
  }
} else if (is_archive()) {
  cake_title = `${__('title.archive')} | ${title}`;
} else if (is_category()) {
  cake_title = `${__('title.category')}:${page.category} | ${title}`;
} else if (is_tag()) {
  cake_title = `${__('title.tag')}:${page.tag} | ${title}`;
}
%>
<title><%= cake_title %></title>
