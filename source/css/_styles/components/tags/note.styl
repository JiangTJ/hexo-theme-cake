.post-body .note {
  position: relative;
  padding: 15px;
  margin-bottom: 20px;
  border: 1px solid $gainsboro;
  border-left-width: 5px;
  border-radius: 3px;

  header {
    margin-top: 3px;
    margin-bottom: 0;
    border-bottom: initial;
    padding-top: 0 !important;
    font-size: 1.2em;
    line-height: 1.2rem;
    font-weight: bold;
  }

  p, ul, ol, table, pre, blockquote {
    &:first-child {
      margin-top: 0;
    }
    &:last-child {
      margin-bottom: 0;
    }
  }

  &:not(.no-icon) {
    padding-left: 45px;
  }

  svg {
    position: absolute;
    font-size: larger;
    top: 1.2em;
    left: 1em;
  }

  &.default {
    border-left-color: $note-default-border;
    header, svg {
      color: $note-default-text;
    }
  }

  &.primary {
    border-left-color: $note-primary-border;
    header, svg {
      color: $note-primary-text;
    }
  }

  &.info {
    border-left-color: $note-info-border;
    header, svg {
      color: $note-info-text;
    }
  }

  &.success {
    border-left-color: $note-success-border;
    header, svg {
      color: $note-success-text;
    }
  }

  &.warning {
    border-left-color: $note-warning-border;
    header, svg {
      color: $note-warning-text;
    }
  }

  &.danger {
    border-left-color: $note-danger-border;
    header, svg {
      color: $note-danger-text;
    }
  }
}
