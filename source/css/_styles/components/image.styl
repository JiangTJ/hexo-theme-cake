img {
  margin: auto;
  max-width: 100%;
  height: auto;
}

img.center {
  display: block;
  margin: 14px auto;
}

img.box {
  display: block;
  margin: 14px auto;
  box-sizing: border-box;
  padding: 3px;
  border: 1px solid #ddd;
}

.post-body .image-caption {
  text-align: center;
  font-size: var(--font-size);
  color: #999;
  font-weight: bold;
  line-height: 1;
}
