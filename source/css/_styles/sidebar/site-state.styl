.site-state {
  display: flex;
  justify-content: center;
  overflow: hidden;
  line-height: 1.4;
  white-space: nowrap;
  text-align: center;
  margin-top: 10px;
}

.site-state-item {
  padding: 0 10px;
  border-left: 1px solid var(--border-color);

  &:first-child {
    border-left: none;
  }
}

.site-state-item-count {
  display: block;
  text-align: center;
  font-weight: bold;
  font-size: 1.1em;
}

.site-state-item-name {
  font-size: 0.9em;
  color: var(--description-color);
}
