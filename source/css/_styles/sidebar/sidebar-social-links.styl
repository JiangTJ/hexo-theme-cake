.social-links {
  margin-top: 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;

  a {
    display: inline-block;
    vertical-align: middle;
    margin: 0 5px;
    padding: 0 5px;
    font-size: 1em;
    the-transition();
    &:hover {
      border-radius: 0.2em;
      background: var(--bg-color);
    }
  }

  svg {
    margin: 0 1px;
  }
}
