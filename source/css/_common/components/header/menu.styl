// Menu
// --------------------------------------------------
.menu {
  margin-top: 20px;
  padding-left: 0;
  text-align: center;
}

.menu .menu-item {
  display: inline-block;
  margin: 0 10px;
  list-style: none;

  +mobile() {
    margin-top: 10px;
  }

  a {
    show();
    font-size: 13px;
    line-height: inherit;
    border-bottom: 1px solid $menu-link-border;
    transition-property: border-color;
    the-transition();

    &:hover { border-bottom-color: $menu-link-hover-border; }
  }

  .fa,.fas,.fab,.far,.fal,.fad {
    margin-right: 5px;
    width: 1rem;
  }
}

.sub-menu-wrap {
  background-color: white;
  border-radius: .5rem;
}

.sub-menu {
  margin: 0;
  padding: 6px 0;
  border-top: .5px dotted $color-3;

  &+ #content > #posts {
    .post-block {
      margin-top: $sidebar-offset;
      +tablet() {
        margin-top: $content-tablet-padding;
      }
      +mobile() {
        margin-top: $content-mobile-padding;
      }
    }
  }
}

.sub-menu:first-child{
  margin-top: 10px;
  border-top: initial !important;
}

.sub-menu .menu-item {
  display: inline-block !important;

  & a {
    padding: initial !important;
    margin: 5px 10px;
  }

  & a:hover {
    background: initial !important;
    color: $sidebar-highlight;
  }

  & a:after {
    display:none !important;
  }

}

.sub-menu .menu-item-active a {
  background: #fff !important;
  color: $sidebar-highlight;
  &:hover {
    background: #fff !important;
  }
}
