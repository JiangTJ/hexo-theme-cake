//
// Layout
// Note: Must name this file "outline" instead of "layout"
//       Or Hexo will use it as template layout.
// =================================================


.container {
  position: relative;
}


// Header Section
// --------------------------------------------------
.header-inner {
  margin: 0 auto;
  padding: 100px 0 70px;
  width: $content-desktop;

  +desktop-large() {
    .container & { width: $content-desktop-large; }
  }
  +desktop-largest() {
    .container & { width: $content-desktop-largest; }
  }
}


// Main Section
// --------------------------------------------------
.main {
  clearfix();
  padding-bottom: initial;
}
.main-inner {
  margin: 0 auto;
  width: $content-desktop;

  +desktop-large() {
    .container & { width: $content-desktop-large; }
  }
  +desktop-largest() {
    .container & { width: $content-desktop-largest; }
  }
}
.container .main-inner {
  +tablet-mobile() {
    width: auto;
  }
}

.content-wrap {
  float: right;
  box-sizing: border-box;
  width: $content-wrap;
  min-height: 700px;

  +tablet() {
    width: 100%;
    padding: $content-tablet-padding;
    border-radius: initial;
  }
  +mobile() {
    width: 100%;
    padding: $content-mobile-padding;
    min-height: auto;
    border-radius: initial;
  }
}

// Footer Section
// --------------------------------------------------
.footer {
  padding: 20px 0;
  bottom: auto;
}
.footer-inner {
  box-sizing: border-box;
  margin: 0px auto;
  width: $content-desktop;
  padding-left: 260px;

  +tablet-mobile() {
    width: auto;
    padding-left: 0 !important;
    padding-right: 0 !important;
  }
  +desktop-large() {
    .container & { width: $content-desktop-large; }
  }
  +desktop-largest() {
    .container & { width: $content-desktop-largest; }
  }
}
