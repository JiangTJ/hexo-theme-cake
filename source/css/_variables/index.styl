:root {
  --color: #59606a;
  --link-color: #252525;
  --link-color-hover: #7a8088;
  --bg-color: #eeeff0;
  --description-color: #999;
  --border-color: #eee;
  --selection-bg: #262a30;
  --selection-color: white;
  --font-family: 'Itim', 'PingFang SC', 'Microsoft YaHei', 'sans-serif';
  --font-size: 14px;
  --radius: 0.5em;
}

pre, code {
  --font-family: 'Inconsolata', 'consolas', 'PingFang SC', 'Microsoft YaHei', 'monospace';
}

table {
  --border-color: #ddd;
  --row-odd-bg-color: #f9f9f9;
  --row-hover-bg-color: #f5f5f5;
}

.sidebar {
  --link-color: #555;
  --link-color-hover: #222;
}

.post-toc {
  --link-color: #666;
}

.post-toc .nav .active > a {
  --color: #fc6423;
}

.sidebar-nav {
  --link-color-hover: #fc6423;
}

.site-title {
  --font-family: 'Lobster', 'Itim', 'PingFang SC', 'Microsoft YaHei', 'sans-serif';
}

.site-author-name {
  --color: #222;
}

.center-quote {
  --border-color: #ccc;
}

.social-links {
  --bg-color: #eee;
}

.pagination {
  --bg-color: #fff;
  --bg-color-active: #ccc;
  --color-active: #fff;
}

.comments {
  --bg-color: #fff;
}

// Colors
// colors for use across theme.
// --------------------------------------------------
$grey         = #bbb
$red          = #ff2a2a
$blue         = #0684bd
$orange       = #fc6423


// Scaffolding
// Settings for some of the most global styles.
// --------------------------------------------------
// Global text color on <body>
$text-color                   = #59606a

// Global border color.
$border-color                 = #ccc

// Background color for <body>
$body-bg-color                = #eeeff0

// Font Weight
$font-weight-lighter      = 200
$font-weight-light        = 300
$font-weight-normal       = 400
$font-weight-bold         = 600
$font-weight-bolder       = 700

// Z-index master list
// --------------------------------------------------
$zindex-bottom  = -1
$zindex-1       = 1010
$zindex-2       = 1020
$zindex-3       = 1030
$zindex-4       = 1040
$zindex-5       = 1050

// Buttons
// --------------------------------------------------
$btn-font-weight                = normal

$btn-default-radius             = 2px
$btn-default-bg                 = white
$btn-default-color              = $text-color
$btn-default-font-size          = 14px
$btn-default-border-width       = 2px
$btn-default-border-color       = $text-color
$btn-default-hover-bg           = #222
$btn-default-hover-color        = white
$btn-default-hover-border-color = #222

// Layout sizes
// --------------------------------------------------
$content-desktop                = 560px
$content-desktop-large          = 680px
$content-desktop-largest        = 800px


// Headband
// --------------------------------------------------
$headband-height                = 3px
$headband-bg                    = #eee


// Section Header
// Variables for header section elements.
// --------------------------------------------------
$head-bg                        = transparent

// Site Meta
$site-meta-text-align           = center
$brand-color                    = white
$brand-hover-color              = white
$brand-bg                       = #222

//logo
$logo-font-size=24px

$site-subtitle-color            = #999
$subtitle-font-size             = 13px
$subtitle-color                 = #ddd

// Menu
$menu-link-border               = transparent
$menu-link-hover-border         = #222


// Posts Expand
// --------------------------------------------------
$posts-expand-title-font-weight = blod


// Posts Collpase
// --------------------------------------------------
$posts-collapse-left            = 55px
$posts-collapse-left-mobile     = 5px

// Components
// --------------------------------------------------
// Back to top
$b2t-opacity                  = .6
$b2t-opacity-hover            = 0.8
$b2t-position-bottom          = -100px
$b2t-position-bottom-on       = 30px
$b2t-position-right           = 30px
$b2t-position-right-mobile    = 20px
$b2t-font-size                = 12px
$b2t-color                    = white
$b2t-bg-color                 = #222
$b2t-sidebar-bg-color         = $body-bg-color

//  .post-expand .post-eof
//  In Muse scheme, margin above and below the post separator
$post-eof-margin-top          = 80px  //  or 160px for more white space
$post-eof-margin-bottom       = 60px  //  or 120px for less white space

